{
  "name": "tap-protocol-helper",
  "version": "0.1.1",
  "description": "Helper scripts for creating signed authority inscriptions for Tap Protocol",
  "author": "Le Hoang Anh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anhlh-edsolabs/tap-protocol-helper.git"
  },
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "commonjs",
  "keywords": [
    "tap",
    "tap protocol",
    "inscriptions",
    "authority",
    "bitcoin"
  ],
  "scripts": {
    "lint": "yarn prettier --check && yarn eslint",
    "eslint": "eslint 'src/**/*.ts'",
    "prettier": "prettier 'src/**/*.ts'",
    "test": "jest",
    "build": "tsc --build .",
    "clean": "rimraf dist",
    "prepare": "yarn clean && yarn build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts"
    ]
  },
  "dependencies": {
    "@noble/hashes": "^1.4.0",
    "@noble/secp256k1": "^2.1.0",
    "bitcoinjs-lib": "^6.1.6",
    "ecpair": "^2.1.0",
    "tiny-secp256k1": "^2.2.3",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.6.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^9.6.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.5"
  }
}
